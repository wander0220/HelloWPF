<Window x:Class="HelloWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="안녕~!HelloWorld~!!!난 김수현!" HorizontalAlignment="Left" Margin="200,75,0,0" VerticalAlignment="Top" Width="400" Height="200" FontWeight="Bold" FontSize="20" Click="Button_Click" BorderBrush="{x:Null}">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF68FFED" Offset="1"/>
                    <GradientStop Color="#FF21D5FE" Offset="0.012"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
